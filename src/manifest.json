{
  "manifest_version": 2,
  "icons": { "128": "icon.png" },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["https://siga.usm.cl/*"],
    "js": ["js/content.js"]
  }],
  "permissions": ["https://siga.usm.cl/pag"],
  "web_accessible_resources": [ "js/*", "html/*", "css/*", "images/*" ],
  "update_url": "http://raw.github.com/ssl-csrg/xsiga/updates.xml"
}
